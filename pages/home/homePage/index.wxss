.content {
  background: #fff;
  margin-top: 20rpx;
}

.content .listNave {
  width: 100%;
}

.content .listNave .van-sticky-wrap {
  width: 100%;
  background: #fff;
}

.content .navagater {
  height: 88rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #797d82;
  font-size: 28rpx;
  border-bottom: 2rpx solid #ededed;
}

.content .navagater .sales {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.content .navagater .sales .van-icon-style {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 14rpx;
  margin-left: 10rpx;
}

.content .goods {
  padding-top: 30rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.content .goods .listItem {
  width: 330rpx;
  height: 474rpx;
  margin-bottom: 40rpx;
}

.content .goods .listItem image {
  width: 330rpx;
  height: 330rpx;
  background: #f4f4f4;
}

.content .goods .listItem .textDescribe {
  display: flex;
  flex-direction: column;
}

.content .goods .listItem .textDescribe .goodsName {
  margin-top: 24rpx;
  color: #2c3e50;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 20rem;
}

.content .goods .listItem .textDescribe .goodDetails {
  font-size: 24rpx;
  color: #797d82;
  margin-top: 14rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 20rem;
}

.content .goods .listItem .textDescribe .price {
  color: #c03131;
}

.content .goods .listItem .textDescribe .price .ren {
  font-size: 20rpx;
  padding-right: 6rpx;
}

.content .goods .listItem .textDescribe .price .priceNum {
  font-size: 30rpx;
}
