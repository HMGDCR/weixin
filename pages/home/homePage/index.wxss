}

.gridContent {
  padding: 30rpx 0;
  background: #fff;
}

.gridContent .grid {
  height: 320rpx;
}

.gridContent .grid .van-grid {
  height: 320rpx;
}

.gridContent .grid .van-grid .van-grid-item {
  height: 160rpx;
}

.gridContent .grid .van-grid .van-grid-item .van-grid-item__content {
  padding: 16rpx 48rpx 16rpx 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.gridContent .grid .van-grid .van-grid-item .van-grid-item__content .van-grid-item__icon {
  width: 90rpx;
  height: 90rpx;
