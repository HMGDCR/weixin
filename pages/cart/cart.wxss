/* pages/cart/index.wxss */
.radio-group{
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.radio {
  display: flex;
  align-items: center;
  justify-content: center;
   transform:scale(0.7);
}
.radio::after{
  height: 30px;
  width: 30px;
  border-radius: 50%;
}
.free-freight{
  margin-left: 30rpx
}
.checkAll{
  line-height: 98rpx;
}
.free-store{
  height:44px;
  background:#fff;
  display:flex;
  line-height:44px;
  border-bottom:1px solid #F4F4F4;
  width: 100vw;
}
.button-style{
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 98rpx;
  height:98rpx;
  width:210rpx;
  font-size:34rpx;
  color:#C03131;
}
.flx-cent .van-card__title.van-multi-ellipsis--l2 {
    width: 400rpx;
    font-size: 30rpx;
    color: #2e2f30;
  }
  .van-nav-bar__left,
  .van-nav-bar__right {
    font-size: 34rpx;
  }
  .navagator .van-nav-bar .van-icon {
    color: #2e2f30;
  }
  .navagator .van-nav-bar__text {
    color: #2e2f30;
  }
  .buttom-nav {
    display: flex;
    justify-content: space-between;
    height: 98rpx;
    width: 100%;
    background: #fff;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
  }
  .van-card__content {
    padding-right: 30rpx;
  }
  .van-checkbox {
    padding: 0 30rpx;
    background: white;
  }
  .flx-cent {
    padding: 30rpx 30rpx 30rpx 0;
    display: flex;
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
  }
  .cart-befor {
    height: 100vh;
    background-color: #f4f4f4;
  }
  .van-card__bottom {
    line-height: 40rpx;
    margin-top: 100rpx;
  }
  .van-card {
    padding: 0rpx;
    background: #fff;
    flex-grow: 2;
  }
  .van-card:not(:first-child) {
    margin-top: 0rpx;
  }
  .edit .van-nav-bar__text {
    font-size: 30rpx;
    padding: 0 38rpx;
  }
  .icon-line-height {
    margin-bottom: 10rpx;
  }
  .no-fare {
    position: absolute;
    right: 30rpx;
    top: 8rpx;
    color: #2e2f30;    
    background: #fff;
    font-size: 32rpx;

  }
   .no-fare::after{
    border: none;
   }
  .van-card__content {
    width: 400rpx;
  }
  .cart-goods image {
    width: 190rpx;
    height: 190rpx;
    background-color: #f8f8f8;
    margin-left: 30rpx;
  }
  .cart-container {
    width: 100%;
    height: 100%;
    padding-left: 20rpx;
  }
  .goods-msg {
    display: inline-block;
    width: 414rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .goods-price {
    position: relative;
    display: flex;
    align-items: flex-end;
    margin-top: 100rpx;
    height: 52rpx;
  }
  .price {
    font-size: 30rpx;
    margin-right: 10rpx;
    color: #b91717;
  }
  .old-price {
    font-size: 24rpx;
    color: #acaaaa;
    text-decoration: line-through;
  }
  .count {
    display: inline-block;
    position: absolute;
    right: 0;
    color: #b8b5b5;
    font-size: 24rpx;
  }
  .small-box {
    width: 230rpx;
    display: inline-block;
    margin-top: 30rpx;
    height: 50rpx;
  }
  .small-box text {
    height: 50rpx;
    display: inline-block;
    line-height: 50rpx;
    text-align: center;
  }
  .all-price {
    display: inline-block;
    height: 100%;
    color: #c23c3c;
    font-size: 32rpx;
    position: absolute;
    right: 228rpx;
    margin-top: 27rpx;
  }
  /* 空白 */
  .kongbai{
    height: 100rpx;
    width: 100%;
    background: #f4f4f4;
  }

  /* 进不器 */
  .van-steppe{
    position: relative;
    top: 15rpx;
    left: 10rpx;

  }
  .van-button--danger{
    border: none !important;
    background: #b91717 !important;
  }
  .van-submit-bar__price {
    color: #b91717 !important;
  }

