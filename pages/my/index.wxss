/**index.wxss**/
.myCenter {
  height: 100vh;
  background: #f4f4f4;
}


.header {
  height: 272rpx;
  background: url(https://file.sdyxmall.com/h5/v1/public/app/img/bg.71ef26b.png) no-repeat top;
  background-size: cover;
  padding: 56rpx 0 20rpx 40rpx;
}


.header .head {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}


.header .head image {
  width: 130rpx;
  height: 130rpx;
  margin-right: 40rpx;
}


header .head text {
  font-size: 30rpx;
  color: #2c3e50;
}


.wealthBox {
  height: 142rpx;
  background: white;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
}


.wealthBox .wealth {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}


.wealthBox .wealth .num {
  color: #2e2f30;
  margin-bottom: 14rpx;
  font-size: 32rpx;
}


.wealthBox .wealth .num .numText {
  font-size: 24rpx;
}


.wealthBox .wealth .text {
  margin-top: 6rpx;
  color: #797d82;
}


.orderInfo .user-links .fontColor {
  color: #797d82;
  font-size: 26rpx;
}




.orderInfo .user-links .iconStyle {
  color: #797d82;
  font-size: 54rpx;
}


.user-poster {
  width: 100%;
  height: 53vw;
  display: block;
}


.user-links {
  padding: 30rpx 0;
  font-size: 24rpx;
  text-align: center;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}


.user-links .van-icon {
  display: block;
  font-size: 48rpx;
}




.orderInfo .myOrder {
  font-size: 30rpx;
}


.van-cell-group .van-cell__left-icon {
  font-size: 44rpx;
}


.van-cell-group .myExperience .van-cell__left-icon:first-child {
  color: #fab646;
}


.van-cell-group .welfare .van-cell__left-icon:first-child {
  color: #ec8383;
}


.van-cell-group .service .van-cell__left-icon:first-child {
  color: #398bc9;
}